#include "TH1.h"
#include "TFile.h"

void addErrors()
{
  /*  TFile *f = TFile::Open("output.root");
  if( f==0) {
    printf("Error: output.root does not exist");
    return;
  }

  f->cd("demo");
*/ 
  for( int pt = 1; pt < 1001; pt += 20 )
    {
      int bin = h_bjet_pt_wt->FindBin(pt);
      float err = h_bjet_pt_wt_plus_err->GetBinContent(bin) - h_bjet_pt_wt->GetBinContent(bin);
      h_bjet_pt_wt->SetBinError(bin,err);
    }
h_bjet_pt_wt->Draw();
 
  return;
}
